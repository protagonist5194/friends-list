<% if user_signed_in? %>

  <table class="table table-striped table-bordered table-hoover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th> </th>
      </tr>
    </thead>

      <tbody>

        <% @friends.each do |friend| %>
          <% if friend.user == current_user %>
       
           <tr>
             <td>
               <%= link_to friend.first_name  + "          "  +  friend.last_name, friend %>
              </td>
            
             <td><%= friend.email %></td>
             <td><%= friend.phone %></td>
             <td><%= friend.twitter %></td>

              <td><%= link_to "Delete", friends_path(friend), method: :delete, data: { confirm:'Are you sure?' }, class:"btn btn-outline-danger" %></td>
            </tr>
          <% end  %>
        <% end %>
      </tbody>
  </table>
  <br>

    

  <%= link_to "New friend", new_friend_path, class:"btn btn-success" %>

<% else %>
<h1>Hello world!</h1>
<p>This is my first Rails Webpage..</p>

<% end %>